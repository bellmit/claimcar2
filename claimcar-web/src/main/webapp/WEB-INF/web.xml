<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <description>Spring集成Web环境的通用配置,用于加载除Web层的Bean</description>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath*:spring/*.xml 
		</param-value>
  </context-param>
  <context-param>
    <param-name>spring.profiles.active</param-name>
    <param-value>development</param-value>
  </context-param>
  <context-param>
    <description>缓存类型，支持redis、ehcache和hashmap三种</description>
    <param-name>cacheType</param-name>
    <param-value>redis</param-value>
  </context-param>
  <!-- 配置日志拦截器 -->
  <filter>
    <filter-name>logFilter</filter-name>
    <filter-class>ins.sino.claimcar.common.filter.LogFilter</filter-class>
    <init-param>
      <param-name>enabled</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>excludes</param-name>
      <param-value>/system/notice/*</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>logFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>sitemesh</filter-name>
    <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
  </filter>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>webAppFilter</filter-name>
    <filter-class>ins.framework.web.filter.WebAppFilter</filter-class>
  </filter>
  <filter>
    <filter-name>shiroFilter</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>
  <filter>
    <filter-name>injectSQL</filter-name>
    <filter-class>ins.platform.shiro.web.filter.InjectSQLFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>ViresUrlFilter</filter-name>
  	<filter-class>ins.sino.claimcar.common.filter.ViresUrlFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>injectSQL</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>webAppFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>shiroFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <filter-mapping>
  	<filter-name>ViresUrlFilter</filter-name>
  	<url-pattern>*.do</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>ins.sino.claimcar.main.listener.StartupListener</listener-class>
  </listener>
  <filter>
    <filter-name>XssEscape</filter-name>
    <filter-class>ins.platform.shiro.web.filter.XssFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>XssEscape</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <filter-mapping>
    <filter-name>sitemesh</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/rpc</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ClaimFittingsServerServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.fitting.web.action.ClaimFittingsServerServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>ClaimFittingsReloadServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.fitting.web.action.ClaimFittingsReloadServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>JyDlossReceiveServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.fitting.web.action.JyDlossReceiveServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>JyPriceReceiveServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.fitting.web.action.PriceReturnServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>JyVLossReceiveServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.fitting.web.action.VLossReturnServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>JyDLChkReceiveServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.fitting.web.action.JyDLChkReceiveServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>JXCourtReceiveServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.jiangxicourt.web.action.JiangXiCourtQueryServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>MiddleStageQueryClaimServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.middlestagequery.servlet.MiddleStageQueryServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
	<!-- 车承保系统增值条款理赔次数查询 -->
  <servlet>
    <servlet-name>AddValueServicesServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.addvaluetopolicy.servlet.AddValueServicesServlet</servlet-class>
  </servlet>
   <!-- 清理缓存 -->
  <servlet>
    <servlet-name>ClearCacheServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.clearcache.servlet.ClearCacheServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ClaimMarketingQueryServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.claimMarketing.servlet.ClaimMarketingQueryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReceivePaymentInfoServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.pay.web.action.ReceivePaymentInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PingAnDataNoticeServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.pinganUnion.servlet.PingAnDataNoticeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PlatformDataNoticeServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.pinganUnion.servlet.PlatformDataNoticeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImageQueryServlet</servlet-name>
    <servlet-class>ins.sino.claimcar.realtimequery.web.servlet.ImageQueryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ReceivePaymentInfoServlet</servlet-name>
    <url-pattern>/receivepayment</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ClaimFittingsServerServlet</servlet-name>
    <url-pattern>/fittings</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ClaimFittingsReloadServlet</servlet-name>
    <url-pattern>/reloadFittings</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JyDlossReceiveServlet</servlet-name>
    <url-pattern>/jyDlossReceive</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JyPriceReceiveServlet</servlet-name>
    <url-pattern>/jyPriceReceive</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JyVLossReceiveServlet</servlet-name>
    <url-pattern>/jyVLossReceive</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JyDLChkReceiveServlet</servlet-name>
    <url-pattern>/jyDLChkReceive</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>JXCourtReceiveServlet</servlet-name>
    <url-pattern>/jxCourtReceive</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MiddleStageQueryClaimServlet</servlet-name>
    <url-pattern>/middleStageQuery</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddValueServicesServlet</servlet-name>
    <url-pattern>/addValueServicesServlet</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
    <servlet-name>ClearCacheServlet</servlet-name>
    <url-pattern>/clearCacheServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ClaimMarketingQueryServlet</servlet-name>
    <url-pattern>/claimMarketingQueryServlet</url-pattern>
  </servlet-mapping>

  <!-- VAT发票信息通知理赔接口 -->
   <servlet>
		<description></description>
		<display-name>VatResultInfoSerlvet</display-name>
		<servlet-name>VatResultInfoSerlvet</servlet-name>
		<servlet-class>ins.sino.claimcar.pay.web.action.VatResultInfoSerlvet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>VatResultInfoSerlvet</servlet-name>
		<url-pattern>/vatResultInfoSerlvet/result</url-pattern>
	</servlet-mapping>
	<!-- VAT发票主动打回接口 -->
   <servlet>
		<description></description>
		<display-name>BillBackSerlvet</display-name>
		<servlet-name>BillBackSerlvet</servlet-name>
		<servlet-class>ins.sino.claimcar.pay.web.action.BillBackSerlvet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BillBackSerlvet</servlet-name>
		<url-pattern>/billBackSerlvet/result</url-pattern>
	</servlet-mapping>  
  <servlet-mapping>
    <servlet-name>PingAnDataNoticeServlet</servlet-name>
    <url-pattern>/public/push/dataNotice</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PlatformDataNoticeServlet</servlet-name>
    <url-pattern>/public/push/platformDataNotice</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImageQueryServlet</servlet-name>
    <url-pattern>/imageQueryServlet</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>ins.framework.exception.BusinessException</exception-type>
    <location>/error/casError.jsp</location>
  </error-page>
  <error-page>
    <exception-type>org.apache.shiro.authz.UnauthorizedException</exception-type>
    <location>/NoAuthLogin.jsp</location>
  </error-page>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name></web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>PUT</http-method>
      <http-method>DELETE</http-method>
      <http-method>HEAD</http-method>
      <http-method>OPTIONS</http-method>
      <http-method>TRACE</http-method>
    </web-resource-collection>
    <auth-constraint/> 
  </security-constraint>
</web-app>